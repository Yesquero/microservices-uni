{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/api/v1/user/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/user/{id}",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://first:8081"
          ],
          "is_collection": false
        }
      ]
    },
    {
      "endpoint": "/api/v1/posts/all",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/posts/all",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://second:8082"
          ],
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/api/v1/user/{id}/posts",
      "method": "GET",
      "timeout": "800ms",
      "backend": [
        {
          "url_pattern": "/api/v1/user/{id}",
          "host": [
            "http://first:8081"
          ]
        },
        {
          "url_pattern": "/api/v1/posts/?userId={id}",
          "host": [
            "http://second:8082"
          ],
          "is_collection": true
        }
      ]
    }
  ]
}
