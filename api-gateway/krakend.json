  {
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/api/v1/user/{id}/full",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
            "alg": "RS256",
            "jwk_url": "http://keycloak:8080/realms/master/protocol/openid-connect/certs",
            "disable_jwk_security": true,
            "operation_debug": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/user/{id}/full",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://first:8081"
          ],
          "is_collection": false
        }
      ]
    },
    {
      "endpoint": "/api/v1/user/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/user/{id}",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://first:8081"
          ],
          "is_collection": false
        }
      ]
    },
    {
      "endpoint": "/api/v1/posts/all",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/posts/all",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://second:8082"
          ],
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/api/v1/user/{id}/posts",
      "method": "GET",
      "timeout": "800ms",
      "backend": [
        {
          "url_pattern": "/api/v1/user/{id}",
          "host": [
            "http://first:8081"
          ]
        },
        {
          "url_pattern": "/api/v1/posts/?userId={id}",
          "host": [
            "http://second:8082"
          ],
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/api/v1/posts/{postUuid}/comments",
      "method": "GET",
      "extra_config": {
        "auth/validator": {
            "alg": "RS256",
            "jwk_url": "http://keycloak:8080/realms/master/protocol/openid-connect/certs",
            "disable_jwk_security": true,
            "operation_debug": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/posts/{postUuid}/comments",
          "host": [
            "http://second:8082"
          ],
          "is_collection": true
        }
      ]
    }
  ],
  "extra_config":{
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 0,
      "exporters": {
        "jaeger": {
          "endpoint": "http://jaeger:14268/api/traces",
          "service_name":"krakend",
          "buffer_max_count": 1000
        },
        "prometheus": {
              "port": 9091,
              "namespace": "krakend",
              "tag_host": false,
              "tag_path": true,
              "tag_method": true,
              "tag_statuscode": false
          }
      }
    }
  }
}
